<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_toolbar"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ultim.radio5.NavigationDrawerActivity"
    android:id="@+id/main_content"
    >
<!--    tools:showIn="@layout/app_bar_navigation_drawer"-->
    <eu.gsottbauer.equalizerview.EqualizerView
        android:id="@+id/equalaizer"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="266dp"
            android:layout_height="189dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_inactive" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/content_play_btn"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/play_button_selector" />

            <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:paddingTop="20dp"
                android:text="Исполнитель: Название трека"
                android:textSize="16sp"
                android:theme="@style/ToolBarStyle" />
        </LinearLayout>


    </LinearLayout>

    <!--android:layout_height="140dp"-->
</RelativeLayout>