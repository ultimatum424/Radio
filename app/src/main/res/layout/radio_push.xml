<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_push"
    android:layout_width="fill_parent"
    android:layout_height="64dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:src="@drawable/push_ic" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/image">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/button_play_push"
            android:layout_toLeftOf="@+id/button_play_push"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:text="Исполнитель"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Композиция"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:textSize="15dp" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/button_play_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/pause_ic"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button_close"
            android:layout_toStartOf="@+id/button_close" />

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_close"
            android:layout_alignTop="@+id/button_play_push"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>