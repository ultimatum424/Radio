<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ultim.radio5.NavigationDrawerActivity"
    android:id="@+id/main_content"
    android:paddingTop="60dp"

    >
<!--    tools:showIn="@layout/app_bar_navigation_drawer"-->
    <com.project.equalizerview.EqualizerView
        android:id="@+id/equalaizer"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:id="@+id/preview_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <com.project.equalizerview.EqualizerView
            android:id="@+id/equalizerView_small"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            app:barCount="3"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/preview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="НАЗВАНИЕ станции"
            android:textStyle="normal"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/equalizerView_small"
            android:layout_toEndOf="@+id/equalizerView_small"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="266dp"
            android:layout_height="189dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_inactive" />

        <ImageView
            android:id="@+id/content_play_btn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/play_button_selector"

            android:layout_gravity="center_horizontal"
            android:paddingTop="30dp"/>

        <TextView
            android:theme="@style/ToolBarStyle"
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="Исполнитель: Название трека"
            android:textSize="@dimen/singer_size"
            android:paddingTop="50dp"/>
    </LinearLayout>

    <!--android:layout_height="140dp"-->
</RelativeLayout>